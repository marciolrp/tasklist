<h2>Lista de tarefas</h2>
 
<p>
   <%= link_to 'Nova Tarefa', new_task_path %> |
   <%= link_to 'Novo Autor', new_author_path %> |
   <%= link_to 'Nova Categoria', new_category_path %>
</p>
<table>
  <tr>
    <th>Descrição</th>
    <th>Status</th>
    <th>Autor</th>
    <th>Categoria</th>
    <th>Data criação</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
<% @tasks.each do |task| %>
  <tr>
    <td><%= task.description %></td>
    <td><%= task.status %></td>
    <td><%= task.author.name %></td>
    <td><%= task.category.name %></td>
    <td><%= task.created_at.strftime("%d/%m/%Y") %></td>
    <td><%= link_to 'Visualizar', task %></td>
    <td><%= link_to 'Editar', edit_task_path(task) %></td>
    <td><%= link_to 'Deletar', task, :confirm => 'Você tem certeza disso?', :method => :delete %></td>
  </tr>
<% end %>
</table>
 
<br />
 
<p>
   <%= link_to 'Nova Tarefa', new_task_path %> |
   <%= link_to 'Novo Autor', new_author_path %> |
   <%= link_to 'Nova Categoria', new_category_path %>
</p>
